<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.antti.androidvaraus.OmatVarauksetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_weight="1">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/varaukset"
            android:scrollbars="vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poistettavaVaraus"
            android:textStyle="bold"
            android:layout_weight="1"
            android:maxWidth="30sp"/>


        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peru Varaus"
            android:id="@+id/peru_varaus_button"
            android:layout_weight="0"/>

    </LinearLayout>

</LinearLayout>
