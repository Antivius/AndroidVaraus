<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.antti.androidvaraus.PaikkaActivity">

    <TextView android:text="Näytöksen data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/naytoksen_data2"
        android:layout_below="@+id/hyvaksy_varaus_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keskeytä varaus"
        android:id="@+id/keskeyta_varaus_button2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gridView2"
        android:layout_below="@+id/naytoksen_data2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numColumns="5"
        android:gravity="center"
        android:columnWidth="50dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/varaus_reset_button2"
        android:text="Tyhjennä valinnat"
        android:layout_alignTop="@+id/keskeyta_varaus_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyväksy valinnat"
        android:id="@+id/hyvaksy_varaus_button2"
        android:layout_below="@+id/varaus_reset_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>